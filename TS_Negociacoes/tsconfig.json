
{
   
   /* Definindo opções de compilação: diretório de saída do código JS na pasta dist, em formato ES6, não permitindo compilação caso tenha erro e não permitindo atribuição implicita de 'any' como tipo das variáveis.
*/
   "compilerOptions": {
      "outDir": "app/dist/js",
      "target":"ES6",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "removeComments": true,
      "strictNullChecks": true,
      "experimentalDecorators": true
   },

   // Localização arquivos TS:
   "include": ["app/src/**/*"]

}